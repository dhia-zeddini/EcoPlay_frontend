<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eco_play_background"
    tools:context=".view.ForgetPwdActivity">

    <!-- You would add the Google and Facebook buttons here.
         For this, you would typically use an ImageView or a custom button
         with the respective logos, and handle their click events in code. -->

    <TextView
        android:id="@+id/tvLoginHeader2"
        android:layout_width="126dp"
        android:layout_height="74dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="81dp"
        android:text="Play"
        android:textColor="@color/design_default_color_on_secondary"
        android:textColorHint="@color/Primary"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLoginHeader"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLoginHeader"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="4dp"
        android:text="Eco"
        android:textAlignment="textEnd"
        android:textColor="@color/Primary"
        android:textColorHint="@color/Primary"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvLoginHeader2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="51dp"
        android:layout_height="43dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="180dp"
        android:text="Back"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSend" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="175dp"
        android:layout_height="43dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="118dp"
        android:backgroundTint="@color/Primary"
        android:text="Send"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etOtp4" />

    <EditText
        android:id="@+id/etOtp4"
        android:layout_width="329dp"
        android:layout_height="73dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="41dp"
        android:background="@drawable/input_shape"
        android:drawableLeft="@drawable/email_icon"
        android:hint="  Your Email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="309dp"
        android:layout_height="65dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="51dp"
        android:text="EcoPlay will send you an email with verification code"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLoginHeader2" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="212dp"
        android:layout_height="32dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/forget_pwd_method_shape"
        android:elevation="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView121">

        <TextView
            android:id="@+id/emailMethod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/method_send_shape"
            android:gravity="center"
            android:text="Email"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/smsMethod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SMS "
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView121"
        android:layout_width="257dp"
        android:layout_height="31dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="77dp"
        android:text="Choose your recovery method"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textColorHighlight="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>