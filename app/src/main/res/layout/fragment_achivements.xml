<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.AchievementsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/profile_card_shape"
                android:elevation="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/levelMainIcon"
                        android:layout_width="40dp"
                        android:layout_height="37dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/oval_black_shape"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/levelHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 2"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/pointsIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="500 Points to next level"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_marginTop="8dp"
                        android:max="6000"
                        android:progress="5200"
                        android:progressDrawable="@drawable/progress_bar" />

                    <TextView
                        android:id="@+id/levelSecondIcon"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/progressBar"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/oval_gold_shape"
                        android:gravity="center"
                        android:text="2" />

                    <TextView
                        android:id="@+id/nextLevelSecondIcon"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/progressBar"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="324dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/oval_gold_shape"
                        android:gravity="center"
                        android:text="2" />

                    <TextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="26dp"
                        android:layout_toEndOf="@+id/levelSecondIcon"
                        android:text="500"
                        android:textColor="#5A4629" />

                    <TextView
                        android:id="@+id/tvPointsTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="26dp"
                        android:layout_toEndOf="@+id/tvPoints"
                        android:text="/6000"
                        android:textColor="@color/gray" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="STATS"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="181dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="114dp">

                    <LinearLayout
                        android:layout_width="183dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/profile_card_shape"
                        android:elevation="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="129dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/quizp" />

                        <LinearLayout
                            android:layout_width="134dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:text="55"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView139"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Quizzes"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="183dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/profile_card_shape"
                        android:elevation="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="104dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/ecoleaderb" />

                        <LinearLayout
                            android:layout_width="134dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView141"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:text="#2"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView131"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:text="Leaderboard "
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/profile_card_shape"
                        android:elevation="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView23"
                            android:layout_width="129dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/checkprofil" />

                        <LinearLayout
                            android:layout_width="134dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView143"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:text="83%"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView133"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Accuracy"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/profile_card_shape"
                        android:elevation="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView24"
                            android:layout_width="129dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/recall" />

                        <LinearLayout
                            android:layout_width="134dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView145"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:text="86%"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView137"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Recall"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="MEDALS"
                android:textColor="@color/gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_card_shape"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView51"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="7dp"
                        android:src="@drawable/gold_medal" />

                    <TextView
                        android:id="@+id/textView101"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Gold"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNbrGold"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/gold_rect"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="#EDB552"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_card_shape"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView52"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/silver_medal" />

                    <TextView
                        android:id="@+id/textView102"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Silver"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNbrSilver"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/silver_rect"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="#717484"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_card_shape"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/bronze_medal" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:text="Bronze"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="53dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bronze_rect"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="#AA9083"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>